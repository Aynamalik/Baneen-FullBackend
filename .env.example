# Database Configuration
MONGODB_URI=mongodb://localhost:27017/baneen
NODE_ENV=development

# Redis (optional - uses in-memory storage when not set)
# REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-refresh-token-secret-here

# Server Configuration
PORT=3000
API_VERSION=v1
BASE_URL=http://localhost:3000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001,https://baneen-admin-dashboard-or1t.vercel.app

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Socket.io Configuration
SOCKET_CORS_ORIGIN=http://localhost:5173

# Payment Gateway Configurations

# EasyPaisa Configuration
EASYPAISA_BASE_URL=https://api.easypaisa.com.pk
EASYPAISA_MERCHANT_ID=your-easypaisa-merchant-id
EASYPAISA_PASSWORD=your-easypaisa-password
EASYPAISA_HASH_KEY=your-easypaisa-hash-key

# JazzCash Configuration
JAZZCASH_BASE_URL=https://sandbox.jazzcash.com.pk
JAZZCASH_MERCHANT_ID=your-jazzcash-merchant-id
JAZZCASH_PASSWORD=your-jazzcash-password
JAZZCASH_INTEGRITY_SALT=your-jazzcash-integrity-salt

# Stripe Configuration (for Card Payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Test Tokens (for testing scripts)
TEST_ADMIN_TOKEN=your-admin-jwt-token-here
TEST_PASSENGER_TOKEN=your-passenger-jwt-token-here
TEST_DRIVER_TOKEN=your-driver-jwt-token-here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/webp
ALLOWED_DOCUMENT_TYPES=application/pdf,image/jpeg,image/jpg,image/png